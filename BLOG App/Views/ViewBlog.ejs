<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./Parcels/Head.ejs') %>
    <title><%= blog.title %> | Blog Site</title>
    <style>
      .blog-container {
        max-width: 900px;
        margin: 60px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.08);
        font-family: "Segoe UI", sans-serif;
      }

      .blog-container h1 {
        font-size: 2.5rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: #333;
      }

      .blog-meta {
        font-size: 0.95rem;
        color: #777;
        margin-bottom: 30px;
      }

      .blog-cover {
        width: 100%;
        max-height: 500px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 30px;
      }

      .blog-body {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #444;
        white-space: pre-wrap;
      }

      @media (max-width: 576px) {
        .blog-container {
          padding: 20px;
        }

        .blog-container h1 {
          font-size: 1.75rem;
        }
      }
    </style>
  </head>
  <body>
    <%- include('./Parcels/Navbar.ejs') %>

    <div class="container-fluid">
      <div class="blog-container">
        <h1><%= blog.title %></h1>
        <div class="blog-meta">
          Posted on <%= blog.createdAt.toDateString() %>
        </div>

        <img
          src="<%= blog.coverImgURL %>"
          alt="Blog Cover"
          class="blog-cover"
        />

        <div class="blog-body"><%= blog.body %></div>
        <div class="container navbar-brand">
          <img src="<%= blog.createdBy.profileImgURL %>" width="80px" />
          <span><%= blog.createdBy.fullName %></span>
        </div>
      </div>
    </div>
    <%- include('./Parcels/Scripts.ejs') %>
  </body>
</html>

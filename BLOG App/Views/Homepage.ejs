<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./Parcels/Head.ejs') %>
    <title>HomePage</title>
  </head>
  <body>
    <%- include('./Parcels/Navbar.ejs') %>

    <div class="container-fluid mt-2">
      <% if (blogs && blogs.length > 0) { %>
      <div class="row">
        <% blogs.forEach(blog => { %>
        <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
          <div class="card h-100 shadow-sm">
            <img
              src="<%= blog.coverImgURL %>"
              class="card-img-top"
              alt="Blog Cover"
              style="max-height: 200px; object-fit: cover"
            />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <div>
                <a class="btn btn-success w-100" href="/blogs/<%= blog._id %>">
                  View Blog
                </a>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <p>No blogs found.</p>
      <% } %>
    </div>

    <%- include('./Parcels/Scripts.ejs') %>
  </body>
</html>
